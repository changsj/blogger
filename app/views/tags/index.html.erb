<h1>All tags</h1>
<ul>
  <% @tags.each do |tag| %>
    <li><%= link_to tag, tag_path(tag) %> (<%= tag.articles.count %>) | <%= link_to 'delete', tag_path(tag), method: :delete, data: { confirm: "are you sure to delete ?" } %> </li>
  <% end %>
</ul>
